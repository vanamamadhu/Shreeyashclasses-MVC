@model Shreeyashclasses.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/otherjs")
    <title>Shree Yash Classes Login</title>
</head>
<body class="login-background" style="float: right; margin-right: 10%; margin-top: 10%;">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "", enctype = "multipart/form-data", id = "frmRegistration" }))
    {
        <div class="col-12" style="background-color:white;">
            <span class="login100-form-title p-b-41">
                <img src="~/assets/images/shreeyash_logo_png.png" style="width: 425px;" />
            </span>
            <form class="login100-form validate-form">
                <div class=" col-12 p-2">
                    <label for="validationCustomUsername" class="form-label">Username</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-square" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                                <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12z"></path>
                            </svg>
                        </span>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-12", id = "validationCustomUsername", autofocus = "autofocus" })
                    </div>
                </div>
                <div class=" col-12 p-2">
                    <label for="validationCustomUsername" class="form-label">Password</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
                                <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z"></path>
                                <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
                            </svg>
                        </span>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control col-12", id = "validationCustomUsername", autofocus = "autofocus", type = "password" })
                    </div>
                </div>
                <div class="col-9 mt-2 ms-5">
                    <button class="btn btn-primary mb-3" type="submit">Login</button>
                    <span style="float:right;">@Html.ActionLink("New User", "NewUser", "Login")</span>
                </div>
            </form>
        </div>
    }
<script type="text/javascript">
        $(document).ready(function () {
           if ('@TempData["Status"]' == "Success"){
                toastr.success('@TempData["Message"]');
            }
            if ('@TempData["Status"]' == "Error"){
                toastr.error('@TempData["Message"]');
            }
        });
</script>
</body>
</html>
